<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bschooleventmanager.eventmanager.controller.auth.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Text text="Connexion à EventManager" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>
    
    <!-- Zone d'erreur -->
    <Label fx:id="errorLabel" style="-fx-text-fill: red; -fx-font-weight: bold;" visible="false" managed="false"/>

    <GridPane alignment="CENTER" hgap="10" vgap="15" maxWidth="350.0">
        <Label text="Email :" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
        <TextField fx:id="emailField" promptText="votre@email.com"
                   GridPane.columnIndex="0" GridPane.rowIndex="1"
                   style="-fx-pref-width: 300px; -fx-pref-height: 35px;"/>

        <Label text="Mot de passe :" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
        <PasswordField fx:id="passwordField" promptText="Votre mot de passe"
                       GridPane.columnIndex="0" GridPane.rowIndex="3"
                       style="-fx-pref-width: 300px; -fx-pref-height: 35px;"/>

        <Button fx:id="loginButton" text="Se connecter" onAction="#handleLogin" defaultButton="true"
                GridPane.columnIndex="0" GridPane.rowIndex="4"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20 10 20; -fx-background-radius: 5; -fx-pref-width: 300px;"/>

        <!-- Lien vers inscription -->
        <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="5" spacing="5.0">
            <Text text="Pas encore de compte ?" style="-fx-font-size: 13px;"/>
            <Hyperlink fx:id="registerLink" text="Créer un compte" onAction="#handleRegister"
                       style="-fx-font-size: 13px; -fx-text-fill: #3498db;"/>
        </HBox>
    </GridPane>
</VBox>