<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Text text="Connexion à EventManager" style="-fx-font-size: 24px;"/>

    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <TextField fx:id="emailField" promptText="Email"
                   GridPane.columnIndex="0" GridPane.rowIndex="0"/>

        <PasswordField fx:id="passwordField" promptText="Mot de passe"
                       GridPane.columnIndex="0" GridPane.rowIndex="1"/>

        <Button text="Se connecter" defaultButton="true"
                GridPane.columnIndex="0" GridPane.rowIndex="2"/>

        <Hyperlink text="Créer un compte"
                   GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    </GridPane>
</VBox>