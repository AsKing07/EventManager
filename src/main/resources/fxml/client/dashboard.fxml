<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bschooleventmanager.eventmanager.controller.client.ClientDashboardController">
    
    <!-- Header avec navigation -->
    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 0;">
            <!-- Barre supérieure avec logo et utilisateur -->
            <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-padding: 10 20 10 20; -fx-background-color: #34495e;">
                <Text text="EventManager" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-fill: white;"/>
                
                <!-- Spacer pour pousser les éléments à droite -->
                <Region HBox.hgrow="ALWAYS"/>
                
                <!-- Informations utilisateur -->
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <Text fx:id="welcomeText" text="Bienvenue, Client" style="-fx-font-size: 14px; -fx-fill: white;"/>
                    <Button fx:id="logoutButton" text="Déconnexion" onAction="#handleLogout"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 5 10 5 10; -fx-background-radius: 3;"/>
                </HBox>
            </HBox>
            
            <!-- Barre de navigation avec onglets -->
            <HBox alignment="CENTER_LEFT" spacing="0" style="-fx-background-color: #2c3e50;">
                <Button fx:id="eventsTab" text="Événements" onAction="#showEvents"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 15 25 15 25; -fx-background-radius: 0; -fx-border-width: 0;"/>
                
                <Button fx:id="profileTab" text="Profil" onAction="#showProfile"
                        style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 15 25 15 25; -fx-background-radius: 0; -fx-border-width: 0;"/>
            </HBox>
        </VBox>
    </top>
    
    <!-- Contenu principal -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #ecf0f1; -fx-padding: 20;">
            <!-- Le contenu sera chargé dynamiquement ici -->
            <VBox alignment="CENTER" spacing="20.0">
                <Text text="Événements Disponibles" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>
                <Text text="Découvrez et réservez vos événements préférés" style="-fx-font-size: 16px; -fx-fill: #7f8c8d;"/>
            </VBox>
        </StackPane>
    </center>
    
    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #34495e; -fx-padding: 10 20 10 20;">
            <Text text="© 2025 EventManager - Plateforme de Réservation d'Événements" style="-fx-font-size: 12px; -fx-fill: #bdc3c7;"/>
            
            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS"/>
            
            <Text fx:id="versionText" text="Version 1.0.0" style="-fx-font-size: 12px; -fx-fill: #bdc3c7;"/>
        </HBox>
    </bottom>
    
</BorderPane>